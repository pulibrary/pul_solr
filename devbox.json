{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "ruby@3.4.1",
    "jdk@19.0.2",
    "pkg-config@latest",
    "libffi@latest",
    "clang@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "bundle": "bundle install",
      "spec": "bundle exec rspec",
      "cap": "bundle exec cap -T"
    }
  }
}
